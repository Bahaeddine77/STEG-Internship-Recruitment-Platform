{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

     <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="h1 mb-5 font-weight-normal text-center">S'inscrire</h1>
            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}
                <div class="row mb-3">
                    <div class="form-group col-md-6">
                        {{ form_label(registrationForm.nom, 'Nom') }}
                        {{ form_widget(registrationForm.nom, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="form-group col-md-6">
                        {{ form_label(registrationForm.prenom, 'Prénom') }}
                        {{ form_widget(registrationForm.prenom, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    
                
                </div>

                <div class="row">
                    <div class="form-group mb-3 ">
                
                        {{ form_label(registrationForm.email, 'Email') }}
                        {{ form_widget(registrationForm.email, { 'attr': {'class': 'form-control'} }) }}
                    </div>

                    <div class="form-group mb-3 ">
                        {{ form_label(registrationForm.plainPassword, 'Mot de Passe') }}
                        {{ form_widget(registrationForm.plainPassword, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                
                </div>
            
               <div class="mb-3">
                    {{ form_row(registrationForm.agreeTerms) }}
               </div>
                

                <button type="submit" class="custom-submit-button" formnovalidate>S'inscrire</button>

                <p class="mt-5 mb-3 text-center "> 
                    Vous avez déjà un compte <a href="{{path('app_login')}}" class="text-decoration-none text-gray">Se Connecter </a>
                </p>
            {{ form_end(registrationForm) }}

       
        </div>
    </div>


   
{% endblock %}
