            {{ form_label(stage.typeStage, 'Type de Stage') }}
            {{ form_widget(stage.typeStage, { 'attr': {'class': 'form-control'} }) }}
        </div>
    </div>

    

    <div class="form-group mb-4">
        {{ form_label(stage.encadrant) }}
        {{ form_widget(stage.encadrant, { 'attr': {'class': 'form-control'} }) }}
    </div>
    

    
    
    <input type="submit" value="{{submitText ?? 'Ajouter stage'}}" class="custom-submit-button">

{{ form_end(stage) }}